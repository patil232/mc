#include <p18f4550.h>     


#pragma config FOSC = HS       
#pragma config WDT = OFF        
#pragma config LVP = OFF        
#pragma config PBADEN = OFF     


#pragma interrupt timer_isr
void timer_isr(void)
{
    TMR0H = 0x6D;              
    TMR0L = 0x82;               
    PORTBbits.RB0 = ~PORTBbits.RB0;   
    INTCONbits.TMR0IF = 0;      
}


#pragma code high_vector = 0x08
void high_vector(void)
{
    _asm
        goto timer_isr         
    _endasm
}
#pragma code                 

void main(void)
{
    ADCON1 = 0x0F;              
    TRISBbits.TRISB0 = 0;      
    PORTBbits.RB0 = 0;          

    T0CON = 0x04;             
    TMR0H = 0x6D;               
    TMR0L = 0x82;               

    INTCONbits.TMR0IF = 0;     
    INTCONbits.TMR0IE = 1;     
    INTCONbits.PEIE = 1;        
    INTCONbits.GIE = 1;        

    T0CONbits.TMR0ON = 1;       

    while(1);                 
}
