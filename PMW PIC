#include<p18f4550.h>
#pragma config FOSC=HS
#pragma config WDT=OFF
#pragma config LVP=OFF
#pragma config PBADEN=OFF

void myMsDelay(unsigned int time)
{
unsigned int i,j;
for(i=0;i<time;i++)
for(j=0;j<710;j++);
}
void main()
{
TRISCbits.TRISC2=0;
TRISCbits.TRISC6=0;
TRISCbits.TRISC7=0;
PR2=0xBA;
CCP1CON=0x0C;
T2CON=0x07;
PORTCbits.RC6=1;
PORTCbits.RC7=0;
while(1)
{
CCP1CONbits.DC1B0=0;
CCP1CONbits.DC1B1=1;
CCPR1L=0x25;
myMsDelay(2000);

CCP1CONbits.DC1B0=0;
CCP1CONbits.DC1B1=0;
CCPR1L=0x1B;
myMsDelay(2000);

CCP1CONbits.DC1B0=0;
CCP1CONbits.DC1B1=1;
CCPR1L=0x70;
myMsDelay(2000);

CCP1CONbits.DC1B0=0;
CCP1CONbits.DC1B1=0;
CCPR1L=0x96;
myMsDelay(2000);
}
}
